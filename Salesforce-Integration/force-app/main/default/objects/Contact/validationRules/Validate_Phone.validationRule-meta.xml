<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validate_Phone</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    NOT(ISBLANK(Phone)),
    NOT(
        REGEX(
            Phone,
            &quot;^[0-9]{10}$&quot;
        )
    )
)</errorConditionFormula>
    <errorMessage>Phone number must contain exactly 10 digits with no spaces or special characters.</errorMessage>
</ValidationRule>
